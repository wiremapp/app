{
  "name": "wiremap",
  "description": "A powerful platform for creating and managing application sitemaps.",
  "version": "1.0.0",
  "private": true,
  "build": {
    "appId": "app.wirem.app",
    "copyright": "Copyright Â© 2023 Wiremap",
    "productName": "Wiremap",
    "icon": {
      "152": "public/images/icons/152.png",
      "180": "public/images/icons/180.png",
      "512": "public/images/icons/512.png"
    },
    "fileAssociations": [
      {
        "ext": "wmp",
        "name": "Wiremap File",
        "role": "Editor"
      }
    ]
  },
  "files": [
    "./build/**/*",
    "./dist/**/*",
    "./node_modules/**/*",
    "./public/**/*",
    "*.js",
    "*.ts"
  ],
  "directories": {
    "buildResources": "public"
  },
  "scripts": {
    "dev": "next -p 3000",
    "build": "next build && npm run generate-sitemap",
    "electron": "electron main.ts",
    "electron:build": "electron-packager . my-electron-app --platform=darwin --arch=x64 --out=dist",
    "start": "next start",
    "lint": "next lint",
    "export": "next export",
    "deploy": "npm run build && npm run export",
    "generate-sitemap": "next-sitemap",
    "type-check": "tsc",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@next-auth/mongodb-adapter": "^1.1.3",
    "@stripe/react-stripe-js": "^2.3.1",
    "@stripe/stripe-js": "^2.1.7",
    "axios": "^1.5.1",
    "cookies-next": "^4.0.0",
    "electron": "^26.2.4",
    "gray-matter": "^4.0.3",
    "i18next": "^23.5.1",
    "i18next-browser-languagedetector": "^7.1.0",
    "i18next-localstorage-backend": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.1.0",
    "mongoose": "^7.5.3",
    "next": "^13.3.4",
    "next-auth": "^4.23.2",
    "next-pwa": "^5.6.0",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.2.1",
    "nodemailer": "^6.9.5",
    "react": "18.2.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "18.2.0",
    "react-i18next": "^13.2.2",
    "react-icons": "^4.11.0",
    "react-remark": "^2.1.0",
    "react-responsive": "^9.0.2",
    "reactflow": "^11.9.2",
    "seo-analyzer": "^1.0.6",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.0",
    "@storybook/addon-essentials": "^7.4.5",
    "@storybook/addon-interactions": "^7.4.5",
    "@storybook/addon-links": "^7.4.5",
    "@storybook/addon-styling": "^1.3.7",
    "@storybook/blocks": "^7.4.5",
    "@storybook/react": "^7.4.5",
    "@storybook/react-webpack5": "^7.4.5",
    "@storybook/testing-library": "^0.2.2",
    "@tailwindcss/typography": "^0.5.10",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/next": "^9.0.0",
    "@types/node": "^20.8.0",
    "@types/react": "18.2.24",
    "autoprefixer": "^10.4.16",
    "electron-packager": "^17.1.2",
    "eslint": "^8.50.0",
    "eslint-config-next": "^13.5.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-storybook": "^0.6.14",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "prop-types": "^15.8.1",
    "storybook": "^7.4.5",
    "storybook-addon-next": "^1.8.0",
    "tailwindcss": "^3.3.3",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.2.2"
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
  "resolutions": {
    "webpack": "^5"
  }
}
